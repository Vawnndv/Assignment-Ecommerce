@using Shared_ViewModels.Product
@model IList<ProductVmDto>

<div class="container position-relative">
    <button class="btn left-arrow" onclick="scrollLeftListProductNew()"><i class="bg-dark text-light bi bi-chevron-compact-left"></i></button>
    <div class="row flex-nowrap overflow-hidden product-container-new">
        @foreach (var product in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-inline-block">
                @await Component.InvokeAsync("ProductCard", product)
            </div>
        }
    </div>
    <button class="btn right-arrow" onclick="scrollRightListProductNew()"><i class="bg-dark text-light bi bi-chevron-compact-right"></i></button>
</div>
