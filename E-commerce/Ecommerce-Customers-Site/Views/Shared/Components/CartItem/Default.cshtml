@using Shared_ViewModels.Cart
@model CartItemDetailVm

<div class="cart-item d-flex align-items-center py-3 border-bottom">
    <img src="@Model.ProductImageUrl" alt="@Model.Product.Name" class="img-thumbnail" style="width: 100px; height: 100px;">
    <div class="cart-item-details ms-3 flex-grow-1">
        <h5 class="product-name">@Model.Product.Name</h5>
        <p>SKU: @Model.Product.Id</p>
        <p>@Model.Product.Description</p>
        <p class="text-decoration-line-through text-dark">@Model.Product.Price.ToString("C")</p>
        <p class="text-danger fw-bold">@((Model.Product.Price * (100 - Model.Product.Discount) / 100).ToString("C"))</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="input-group w-50">
                <button class="btn btn-outline-secondary" type="button" onclick="updateQuantityItemCart(@Model.CartItem.ProductId, -1)">-</button>
                <input type="text" class="form-control text-center bg-transparent" value="@Model.CartItem.Quantity" readonly>
                <button class="btn btn-outline-secondary" type="button" onclick="updateQuantityItemCart(@Model.CartItem.ProductId, 1)">+</button>
            </div>
            <button type="button" class="btn btn-danger my-1" onclick="updateQuantityItemCart(@Model.CartItem.ProductId, -@Model.CartItem.Quantity)">Remove</button>
        </div>
    </div>
</div>