@model Shared_ViewModels.Account.LoginVmDto

@{
    ViewData["Title"] = "Login - Page";
}

<div class="container-fluid px-0 position-relative">
    <img src="/assets/images/Backgound.png" class="w-100" alt="Background Image">
    <div class="overlay position-absolute top-0 start-0 w-100 h-100">
        <div class="row h-100">
            <div class="col-12 col-lg-6">
            </div>
            <div class="col-12 col-lg-6">
                <div class="card my-5 mx-5">
                    <div id="loginForm" class="card-body">
                        <h2 class="card-title text-center">LOGIN</h2>
                        <form asp-controller="Login" asp-action="Index" method="post">
                            @if (ViewBag.Error != null)
                            {
                                <div class="form-group row border border-danger bg-danger bg-opacity-25 rounded mx-2" style="border-width: 2px; border-radius: 10%;">
                                    <div class="col-1">
                                        <i class="bi bi-exclamation-triangle fs-5 text-danger"></i>
                                    </div>
                                    <div class="col-11 d-flex align-items-center">
                                        <span>@ViewBag.Error</span>
                                    </div>
                                </div>

                            }
                            <div class="form-group my-2">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group my-2">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-center mt-2">
                                <button type="submit" class="btn btn-dark">LOGIN</button>
                            </div>
                        </form>
                        <div class="text-center mt-3">
                            <p>Don't have an account? <a asp-controller="Register" asp-action="Index">Register here</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
